#include <iostream>

using namespace std;

class Calculator{
    private:
        int n, i, sum;
    
    public:
        void summation (int arr[],int n){
            sum = 0;
            for ( i = 0; i < n ;i++ )
                sum = sum + arr[i];
            
        
                cout << "sum = " << sum;
                cout << endl;
        }  
        
        void multiply (int arr[],int n){
            sum = 1;
            for ( i =0 ; i < n ;i++ )
                sum = sum * arr[i];
            
        
                cout << "sum = " << sum;
                cout << endl;
            
        }
        
        void division (int arr[],int n){
            sum = 1;
            for ( i = 0; i < n ;i++ )
                sum = sum / arr[i];
            
        
                cout << "sum = " << sum;
                cout << endl;
        }
        
        void subtract (int arr[],int n){
            sum = 0;
            for ( i = 0; i < n ;i++ )
                sum = sum - arr[i];
            
        
                cout << "sum = " << sum;
                cout << endl;
        }
};

int main(){
Calculator calculator;
int choice;
cout <<"enter the array size!: "<<endl;
int sizeN;

cin >> sizeN;
int arr[sizeN];

for (int i = 0; i < sizeN;i++ ){
    cout << "enter the element " << i <<" of array:";
    
    cin >> arr[i];
}
    
    
    



cout<<"=======================================================\n===============By GÃ¶rkem================\n~~ WELCOME to Data Structure Algorithms program ~~\nSelect and Enter Your Choice from the Menu __\n           1. + Summation \n           2. * Multiply\n           3. / Division\n           4. - Subtract\n           5. Exit \n=======================================================\n"<<endl;

 


cin >> choice;
switch (choice){
    case 1:{
        cout << "this is your + result: " << endl;
    calculator.summation (arr, sizeN);
    }break;
    
    case 2:{
        cout << "this is your * result: " << endl;
    calculator.multiply (arr, sizeN);
    }break;
    
    case 3:{
        cout << "this is your / result: " << endl;
    calculator.division (arr, sizeN);
    }break;
    
    case 4:{
        cout << "this is your - result: " << endl;
    calculator.subtract (arr, sizeN);
    }break;
    
    case 5:{
        exit(1);
        break;
    default:
        cout << "\n invalid coise\n";
    }
    
    
    
}

}
